

<div class="accordion">
    <BSCollapseGroup>
        @foreach (var category in Categories)
        {
            <BSCollapseItem>
                <BSCard CardType="CardType.Card">
                    <BSCard CardType="CardType.Header">
                        
                        <BSCollapseToggle><span class="oi oi-caret-right"></span>@("\t\t\t")<span>@category.Name</span> @*<span>@FromDate.ToShortDateString() - @ToDate.ToShortDateString()</span>*@@("\t\t\t")<span>@(category.TransactionSum == 0 ? "-" : category.TransactionSum.ToString() + " kr")</span></BSCollapseToggle> @*sätta class på collapse-toggle?*@
                    @*<div style="display: flex; justify-content: space-between"></div>*@
                    </BSCard>
                    <BSCollapse>
                        <BSCard CardType="CardType.Body">
                            <table class="table">
                                <tbody>
                                    @foreach (var transaction in Transactions)
                                    {
                                        if (transaction.CategoryId.Equals(category.Id) && transaction.TransactionDate >= FromDate && transaction.TransactionDate <= ToDate)
                                        {
                                            <IndividualTransaction CurrentCategory="category" SetCatSum="SetCategorySums" Transaction="transaction" Categories="Categories" />
                                        }
                                    }
                                </tbody>
                            </table>
                        </BSCard>
                    </BSCollapse>
                </BSCard>
            </BSCollapseItem>
        }
    </BSCollapseGroup>


</div>


@code {
    [Parameter] public List<Category> Categories { get; set; }
    [Parameter] public List<Transaction> Transactions { get; set; }
    [Parameter] public DateTime FromDate { get; set; }
    [Parameter] public DateTime ToDate { get; set; }
    [Parameter] public EventCallback SetCategorySums { get; set; }

    
}
